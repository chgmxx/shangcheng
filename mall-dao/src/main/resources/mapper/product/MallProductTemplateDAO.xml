<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gt.mall.dao.product.MallProductTemplateDAO">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.gt.mall.entity.product.MallProductTemplate">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="template_css" property="templateCss"/>
        <result column="template_data" property="templateData"/>
        <result column="user_id" property="userId"/>
        <result column="shop_id" property="shopId"/>
        <result column="create_time" property="createTime"/>
        <result column="is_delete" property="isDelete"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, template_css, template_data, user_id, shop_id , create_time, is_delete
    </sql>

    <select id="selectTemplateByPage" resultMap="BaseResultMap" parameterType="Map">
        select
        <include refid="Base_Column_List"/>
        from t_mall_product_template
        where is_delete=0
        <if test="userId != null">
            and user_id = #{userId}
        </if>
        order by create_time desc
        <if test="firstNum != null and maxNum != null">limit #{firstNum},#{maxNum}</if>
    </select>

</mapper>

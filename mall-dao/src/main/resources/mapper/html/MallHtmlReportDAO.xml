<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gt.mall.dao.html.MallHtmlReportDAO">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.gt.mall.entity.html.MallHtmlReport">
        <id column="id" property="id"/>
        <result column="html_id" property="htmlId"/>
        <result column="style" property="style"/>
        <result column="report_num" property="reportNum"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, html_id , style, report_num
    </sql>

    <update id="updateReportNumByHtmlId">
      UPDATE t_mall_html_report SET report_num=#{num}
      WHERE html_id=#{html_id}
      AND style=#{style}
    </update>
    <select id="countReportNumByHtmlId" resultType="java.lang.Integer">
        SELECT count(1) FROM t_mall_html_report
        WHERE html_id=#{html_id}
        AND style=#{style}
    </select>
    <select id="selectAllByPage" resultType="java.util.Map">
        SELECT
        r.id, r.html_id , r.style,r.report_num ,a.htmlname,a.bus_user_id,a.codeUrl,a.state
        FROM t_mall_html_report r
        LEFT JOIN t_mall_html a ON r.`html_id`=a.id
        WHERE 1=1
        <if test="htmlName != null and htmlName != '' ">
            and a.htmlname like CONCAT(CONCAT('%', #{htmlName}),'%')
        </if>
        <if test="userIds != null">
            and(
            a.pid in
            <foreach collection="userIds" item="id" index="index"
                     open="(" close=")" separator=",">
                #{id}
            </foreach>
            AND a.pid>0
            or a.bus_user_id in
            <foreach collection="userIds" item="id" index="index"
                     open="(" close=")" separator=",">
                #{id}
            </foreach>
            )
        </if>
        limit #{firstNum},#{maxNum}

    </select>
    <select id="selectAllCount" resultType="java.lang.Integer">
        SELECT count(r.id)
        FROM t_mall_html_report r
        LEFT JOIN t_mall_html a ON r.`html_id`=a.id
        WHERE 1=1
        <if test="htmlName != null and htmlName != '' ">
            and a.htmlname like CONCAT(CONCAT('%', #{htmlName}),'%')
        </if>
        <if test="userIds != null">
            and(
            a.pid in
            <foreach collection="userIds" item="id" index="index"
                     open="(" close=")" separator=",">
                #{id}
            </foreach>
            AND a.pid>0
            or a.bus_user_id in
            <foreach collection="userIds" item="id" index="index"
                     open="(" close=")" separator=",">
                #{id}
            </foreach>
            )
        </if>
    </select>

</mapper>
